!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %link{ :href => "/css/style.css", :rel => "stylesheet", :type => "text/css" }
    %title #{message} #{user.username}
  %body
    #header
      %p< #{t.g.you_are_logged_in_as(user.username)}
    #content
      = yield
    #footer
      %p<
        [
        -if nav_tag == 'home'
          #{t.nav.home_button}
        -else
          %a{:href=>'/'}#{t.nav.home_button}
        |
        -if nav_tag == 'profile'
          #{t.nav.profile_button}
        -else
          %a{:href=>'/in/show_user'}#{t.nav.profile_button}
        |
        -if nav_tag == 'edit_profile'
          #{t.nav.edit_profile_button}
        -else
          %a{:href=>'/in/edit_user'}#{t.nav.edit_profile_button}
        |
        -if nav_tag == 'privacy'
          #{t.nav.privacy_button}
        -else
          %a{:href=>'/privacy'}#{t.nav.privacy_button}
        |
        -if nav_tag == 'terms'
          #{t.nav.terms_button}
        -else
          %a{:href=>'/terms'}#{t.nav.terms_button}
        |
        -if nav_tag == 'logout'
          #{t.nav.logout_button}
        -else
          %a{ :href => "/logout" }#{t.nav.logout_button}
        ]
