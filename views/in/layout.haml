!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %link{ :href => "/css/style.css", :rel => "stylesheet", :type => "text/css" }
    %title #{message} #{user.username}
  %body
    #header
      %p<
        You are logged in as
        %b<
          #{user.username}
    #content
      = yield
    #footer
      %p<
        [
        -if nav_tag == 'home'
          Home
        -else
          %a{:href=>'/'}Home
        |
        -if nav_tag == 'profile'
          Profile
        -else
          %a{:href=>'/in/show_user'}Profile
        |
        -if nav_tag == 'edit_profile'
          Edit Profile
        -else
          %a{:href=>'/in/edit_user'}Edit Profile
        |
        -if nav_tag == 'logout'
          Log out
        -else
          %a{ :href => "/logout" }Log out
        ]
